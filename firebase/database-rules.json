{
  "rules": {
    // Private database - only the admin account (with uid override) can read or write
    ".read": "auth.uid === 'admin'",
    ".write": "auth.uid === 'admin'",

    "accessTokens": {
      "$uid": { }
    },

    "collaborativePlaylists": {
      "$userId": {
        ".validate": "!newData.hasChildren() && newData.isBoolean()"
      }
    },

    "editPermissions": {
      "playlists": {
        "$playlistId": {
          "$userId": {
            ".validate": "!newData.hasChildren() && newData.isBoolean()"
          }
        }
      },
      "users": {
        "$userId": {
          "$playlistId": {
            ".validate": "!newData.hasChildren() && newData.isBoolean()"
          }
        }
      },
      "$other": {
        ".validate": false
      }
    },
      
    "tracks": {
      "$playlistId": {
        "$trackId": {
          ".validate": "!newData.hasChildren() && newData.isBoolean()"
        }
      }
    },

    "$other": {
      ".validate": false
    }
  }
}
