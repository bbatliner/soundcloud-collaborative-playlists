{
  "name": "SoundCloud Collaborative Playlists",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "View, manage, and play collaborative playlists on SoundCloud - better with friends.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Collaborative Playlists",
    "default_popup": "src/browser_action.html"
  },
  "permissions": [
    "notifications",
    "https://soundcloud.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://soundcloud.com/*"
      ],
      "js": [
        "src/inject.js"
      ]
    }
  ]
}