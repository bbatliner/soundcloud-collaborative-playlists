{
  "name": "SoundCloud Collaborative Playlists",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "View, manage, and play collaborative playlists on SoundCloud - better with friends.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_popup": "src/browser_action/popup.html"
  },
  "background": {
    "page": "src/background/background.html"
  },
  "permissions": [
    "tabs",
    "notifications",
    "https://soundcloud.com/*",
    "https://localhost:3000/"
  ],
  "content_security_policy": "script-src 'self' https://www.gstatic.com/ https://*.firebaseio.com https://www.googleapis.com; object-src 'self'",
  "content_scripts": [
    {
      "matches": [
        "https://soundcloud.com/*"
      ],
      "exclude_matches": [
        "https://soundcloud.com/connect*"
      ],
      "js": [
        "vendor/jquery-2.2.4.min.js",
        "vendor/jquery.gritter.min.js",
        "src/content_scripts/globals.js",
        "src/content_scripts/main.js",
        "src/content_scripts/sets.js",
        "src/content_scripts/tracks.js"
      ]
    }
  ]
}
